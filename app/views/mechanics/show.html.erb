<h3>Name: <%= @mechanic.name %></h3>
<h3>Years of Experience: <%= @mechanic.years_experience %></h3>
<h3>Rides working on:</h3>
<% @mechanic.rides.each do |ride| %>
<p><%=ride.name %></p>
<%end%>

<h4>Add a ride to workload:</h4>
<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, local: :true do |form|%>
<%= form.label "Ride ID:"%>
<%= form.number_field :ride_id%>
<%= form.submit "Submit"%>
<%end%>
